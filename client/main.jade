
head
  title
    Meteor Todo list

body
  +navbar
  +main
  hr
  +accountbid

template(name="main")
  #content.container
    .span6.offset3
      fieldset
        legend ToDo App
        input#input-todo(type="text", placeholder="What needs to be done?â€¦")
        input#add-todo.btn.btn-primary(type="button", value="Add")
        ul.todo-list
          each todosList
            li.todo
              input.todo-check(type="checkbox")
              | {{title}}
              input.btn.btn-mini.delete-todo(type="button", value="Delete")

